---
import Heading01 from "../components/Heading01.astro";
---

<div id="footer-top" class="footer-top l-section">
  <div class="footer-top__inner l-inner">
    <div>
      <section class="sns">
        <div class="inner">
          <div class="ttl-wrap">
            <Heading01>SNS</Heading01>
          </div>
          <div class="body">
            <div class="note">
              <iframe
                class="note-embed"
                src="https://note.com/embed/notes/nb92f110ed106"
                style="border: 0; display: block; max-width: 100%; height: 471px; width: 494px; padding: 0px; margin: 0 0px; position: static; visibility: visible;"
              ></iframe>
              <script
                async
                src="https://note.com/scripts/embed.js"
                charset="utf-8"
              ></script>
            </div>
            <ul class="btns">
              <li>
                <a href="https://twitter.com/___yoshikieee" target="_blank">
                  <img src="/assets/images/common/btn-twitter.png" alt="" />
                </a>
              </li>
              <li>
                <a href="https://github.com/Vicugn4Pac0s" target="_blank">
                  <img src="/assets/images/common/btn-github.png" alt="" />
                </a>
              </li>
            </ul>
          </div>
        </div>
      </section>
    </div>
    <div>
      <section class="contact">
        <div class="inner">
          <div class="ttl-wrap">
            <Heading01>CONTACT</Heading01>
          </div>
          <div class="body">
            <form id="form" action="/">
              <ul class="form-list">
                <li>
                  <input
                    type="text"
                    name="name"
                    class="InputA"
                    placeholder="Name"
                  />
                </li>
                <li>
                  <input
                    type="text"
                    name="email"
                    class="InputA"
                    placeholder="Email"
                  />
                </li>
                <li>
                  <input
                    type="text"
                    name="title"
                    class="InputA"
                    placeholder="Title"
                  />
                </li>
                <li>
                  <textarea
                    name="message"
                    class="InputA InputA-ta"
                    placeholder="Message"></textarea>
                </li>
                <li>
                  <button type="submit" class="submit-btn">Submit</button>
                </li>
              </ul>
            </form>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>

<style lang="scss">
  .footer-top {
    background: #fff;
    z-index: 1;
    &__inner {
      display: flex;
      gap: 4rem;
      > div {
        width: 50%;
      }
    }
  }
  .sns {
    .inner {
      text-align: center;
      max-width: 30rem;
      margin: 0 auto;
    }
    .ttl-wrap {
      margin-bottom: 3rem;
    }
    .note {
      margin-bottom: 3rem;
    }
    .btns {
      margin: 0 auto;
      display: flex;
      justify-content: center;
      gap: 2rem;
      width: 16rem;
      a {
        transition: 0.35s;
        &:hover {
          opacity: 0.5;
          transition: 0.15s;
        }
      }
    }
  }

  .contact {
    .inner {
      text-align: center;
      margin: 0 auto;
    }
    .ttl-wrap {
      margin-bottom: 3rem;
    }
  }
  .form-list {
    li {
      margin-bottom: 2rem;
    }
  }
  input,
  textarea {
    &.InputA {
      box-sizing: border-box;
      font-size: 1.8rem;
      padding: 1rem 2rem;
      width: 100%;

      //リセット
      -moz-appearance: none;
      -webkit-appearance: none;
      appearance: none;
      background-color: transparent;
      background-image: none;
      border: 1px solid #99d3df;
      border-radius: 0;
      color: inherit;
      font-family: inherit;
      &::placeholder {
        color: #99d3df;
      }
      &:focus {
        border: 1px solid rgba(0, 0, 0, 0.32);
        box-shadow: none;
        outline: none;
      }
      &.InputA-ta {
        height: 23.5rem;
      }
    }
  }
  .submit-btn {
    font-size: 18px;
    padding: 15px 60px;

    //リセット
    -webkit-appearance: none;
    background-color: #99d3df;
    background-image: none;
    border: none;
    border-radius: 0;
    color: #fff;
    cursor: pointer;
    display: inline-block;
    margin: 0;
    text-decoration: none;

    transition: 0.35s;
    &:hover,
    &:focus {
      outline: none;
    }
    &::-moz-foucus-inner {
      border: none;
      padding: 0;
    }

    &:hover {
      background-color: #999;
      transition: 0.15s;
    }
  }
</style>
