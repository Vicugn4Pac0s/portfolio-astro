---
import Heading01 from "../components/Heading01.astro";
import WorksLink from "../components/WorksLink.astro";

const data = [
  {
    ttl: "jQueryAnchorScroll",
    desc: "「jQueryAnchorScroll」は、ページ内スムーススクロールのjQueryプラグインです。カスタマイズ性があり、セクション・画面サイズによってスクロール位置を柔軟に変更することが可能です。",
    link: "/dev/jquery-anchor-scroll/",
    imgPath: "/assets/images/top/works_jas.png",
  },
  {
    ttl: "VueTube",
    desc: "自分専用Youtubeサイト。Vue CLIとFirebaseで作成しました。イイネ機能とコメント機能があります。ここなら誹謗中傷コメントも自由です。",
    link: "https://yoshikieee-vuetube.herokuapp.com/",
    imgPath: "/assets/images/top/works_vuetube.png",
  },
  {
    ttl: "Google Map Modal",
    desc: "「Google Map Modal」はモーダルウインドウでGoogleMapを表示させるプログラムです。",
    link: "/dev/google-map-modal",
    imgPath: "/assets/images/top/works_gmm.png",
  },
  {
    ttl: "Easy Parallax",
    desc: "「Easy Parallax」は、簡単にパララックスが実装できるjQueryプラグインです。",
    link: "/dev/easy-parallax/",
    imgPath: "assets/images/top/works_ep.png",
  },
];
---

<section id="works" class="works l-section">
  <div class="l-inner">
    <div id="anchor-works" class="ttl-wrap">
      <Heading01>WORKS</Heading01>
    </div>
    <div class="body">
      <ul>
        {
          data.map((works) => (
            <li>
              <WorksLink
                ttl={works.ttl}
                desc={works.desc}
                link={works.link}
                imgPath={works.imgPath}
              />
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
<!-- SectionWorks END -->

<style lang="scss">
  .works {
    padding: 10rem 0;
    z-index: 2;
    .ttl-wrap {
      text-align: center;
      position: absolute;
      top: -1.8rem;
      left: 0px;
      width: 100%;
    }
    .body {
      ul {
        display: flex;
        flex-wrap: wrap;

        transform-origin: center bottom;
        transition: 0.35s;
        &:hover {
          transform: translate(0, -10px) scale(1.05);
          box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.1);
          transition: 0.25s;
        }
        @media screen and (max-width: 1000px) {
          &:hover {
            transform: none;
            box-shadow: none;
          }
        }
      }
      ul > li {
        width: 50%;
      }
    }
  }
</style>
